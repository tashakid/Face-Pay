# M-Pesa Daraja API Configuration (Sandbox)
MPESA_KEY=your_mpesa_api_key_here
MPESA_SECRET=your_mpesa_api_secret_here
MPESA_PASSKEY=your_mpesa_passkey_here
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=http://localhost:8000/mpesa/callback

# Firebase Configuration
FIREBASE_CREDENTIALS=path/to/your/firebase_credentials.json
FIREBASE_API_KEY=your_firebase_api_key_here

# JWT Configuration (for application tokens)
JWT_SECRET=your-jwt-secret-key-change-in-production

# Camera Configuration
# Use CAMERA_INDEX for local webcam (0, 1, 2...) or CAMERA_URL for IP camera (http://192.168.x.x:8080/video)
CAMERA_INDEX=0
CAMERA_URL=

# DeepFace Face Recognition Configuration
DEEPFACE_MODEL=ArcFace
# Available models: ArcFace, Facenet, Facenet512, VGG-Face, GhostFaceNet
# ArcFace: 96.7% accuracy, ~100MB (recommended for 2GB VRAM)
# Facenet512: 98.4% accuracy, ~500MB (best accuracy but heavier)
# Facenet: 93% accuracy, ~100MB (balanced)

DEEPFACE_DETECTOR=yunet
# Available detectors: yunet, retinaface, opencv, ssd, mtcnn
# yunet: Fast, good accuracy (recommended)
# retinaface: Best accuracy, slower
# opencv: Fastest, lower accuracy

DEEPFACE_DISTANCE_METRIC=euclidean_l2
# Available metrics: euclidean_l2, euclidean, cosine, angular
# euclidean_l2: Best for ArcFace
# cosine: Good for most models

PAYMENT_THRESHOLD=0.35
# Authentication threshold (0.0-1.0)
# Lower = stricter (fewer false positives, more false negatives)
# Recommended for payments: 0.30-0.40

FORCE_CPU=false
# Set to true to force CPU usage even if GPU is available
# Useful if GPU causes memory issues